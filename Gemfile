gem 'rack-cache'

group :development do
  gem 'sqlite3'
end

group :production do
  gem 'pg'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'uglifier', '>= 2.1.0'
end

# ==========
# MemCachier
# ==========
# We recommend kgio for better performance.
gem 'kgio'
